@model AdminTable
@{
    ViewData["Title"] = "Admin Girisi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="AdminEmail" class="form-label">Username</label>
                <input asp-for="AdminEmail" class="form-control" placeholder="E-Posta" />
                <span asp-validation-for="AdminEmail" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Adminsifre" class="form-label">Password</label>
                <input asp-for="Adminsifre" type="password" class="form-control" placeholder="Sifre" />
                <span asp-validation-for="Adminsifre" class="text-danger small"></span>
            </div>

            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-right-to-bracket me-2"></i>Giriş Yap</button>
            </div>
        </form>
    </div>
</div>

