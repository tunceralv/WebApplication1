@model Hasta
@{
	ViewData["Title"] = "Giriş Ekranı";
}


<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="HastaEmail" class="form-label">Username</label>
                <input asp-for="HastaEmail" class="form-control" placeholder="E-Posta"/>
                <span asp-validation-for="HastaEmail" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="HastaTc" class="form-label">Password</label>
                <input asp-for="HastaTc" type="password" class="form-control" placeholder="Sifre"/>
                <span asp-validation-for="HastaTc" class="text-danger small"></span>
            </div>

            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-right-to-bracket me-2"></i>Giriş Yap</button>
            </div>
        </form>
    </div>
</div>